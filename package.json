{
    "name": "react-wait-content",
    "version": "1.0.0",
    "description": "React component to delay children rendering to a determined load state of the page",
    "keywords": [
        "react",
        "delay",
        "defer",
        "dom",
        "domcontent",
        "load",
        "suspend",
        "fallback"
    ],
    "author": {
        "name": "Jonathan Mataloni",
        "email": "jo.mataloni@gmail.com",
        "url": "https://wedial.it/jonathan-mataloni"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jonamat/react-wait-content"
    },
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=5.0.0"
    },
    "license": "MIT",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "jsnext:main": "lib/esm/index.js",
    "sideEffects": false,
    "types": "./lib/esm/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "build": "rimraf ./lib/* && concurrently \"npm run build:cjs \" \"npm run build:esm \" ",
        "build:cjs": "rimraf ./lib/cjs && tsc -p . --outDir ./lib/cjs --module commonjs --target es5",
        "build:esm": "rimraf ./lib/esm && tsc -p . --outDir ./lib/esm --module esnext --target esnext",
        "test": "jest ./src --coverage",
        "test:watch": "jest ./src --watch",
        "lint": "eslint --ext .ts,.tsx ./src",
        "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
        "prepublish": "npm run lint:fix && npm run test && npm run build"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "5.11.1",
        "@testing-library/react": "10.4.7",
        "@types/jest": "26.0.5",
        "@types/react": "16.9.43",
        "@types/react-dom": "16.9.8",
        "@typescript-eslint/eslint-plugin": "3.7.0",
        "@typescript-eslint/parser": "3.7.0",
        "concurrently": "^5.2.0",
        "eslint": "7.5.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.20.3",
        "jest": "26.1.0",
        "prettier": "2.0.5",
        "prop-types": "15.7.2",
        "react": "16.8.0",
        "react-dom": "16.8.0",
        "react-test-renderer": "16.8.0",
        "rimraf": "^3.0.2",
        "ts-jest": "26.1.3",
        "typescript": "3.9.7"
    },
    "peerDependencies": {
        "react-dom": "^16.8.0",
        "prop-types": "^15.6.2",
        "react": "^16.8.0"
    },
    "dependencies": {
        "react-delay-fallback": "1.0.2"
    }
}
